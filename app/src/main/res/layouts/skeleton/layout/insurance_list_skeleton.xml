<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/text_bg"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_income"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@drawable/gray_solid_background_skeleton"
                android:scaleType="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="VectorDrawableCompat" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_pending"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/dana_fa_regular"
                android:background="@drawable/gray_solid_background_skeleton"
                android:textColor="@color/colorTxtHint"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/img_income"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/dana_fa_regular"
                android:background="@drawable/gray_solid_background_skeleton"
                android:textColor="@color/colorTxtHint"
                android:textSize="17sp"
                app:fontFamily="@font/dana_fa_bold"
                app:layout_constraintBottom_toTopOf="@id/line_info"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toEndOf="@+id/img_income"
                app:layout_constraintTop_toBottomOf="@id/title_pending" />



            <View
                android:id="@+id/line_info"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorTxtGray"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_insurance_submit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/gray_solid_background_skeleton"
                android:scaleType="centerInside"
                android:layout_margin="16dp"
                tools:ignore="VectorDrawableCompat" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_insurance_submit"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_solid_background_skeleton"
                android:fontFamily="@font/dana_fa_regular"
                app:layout_constraintStart_toEndOf="@+id/img_insurance_submit"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/colorTxtHint"
                android:textSize="12sp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="16dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_solid_background_skeleton"
                android:fontFamily="@font/dana_fa_regular"
                app:layout_constraintStart_toEndOf="@+id/img_insurance_submit"
                app:layout_constraintTop_toBottomOf="@id/title_insurance_submit"
                android:textColor="@color/colorTxtHint"
                android:layout_marginTop="8dp"
                app:fontFamily="@font/dana_fa_bold"
                android:textSize="17sp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/insurance_list_txt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_info"
        android:background="@drawable/gray_solid_background_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorwhite"
        app:fontFamily="@font/dana_fa_bold"
        android:textSize="15sp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/see_more_txt"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linear_info"
        android:background="@drawable/gray_solid_background_skeleton"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorTxtGray"
        app:fontFamily="@font/dana_fa_bold"
        android:textSize="12sp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/see_more_txt"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:background="@drawable/text_bg"
            android:layout_margin="8dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_insurance"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_solid_background_skeleton"
                android:textColor="@color/colorwhite"
                app:layout_constraintStart_toStartOf="parent"
                app:fontFamily="@font/dana_fa_regular"
                android:textSize="14sp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/colorTxtGray"
                android:background="@drawable/gray_solid_background_skeleton"
                app:layout_constraintBottom_toTopOf="@id/line"
                android:text="18:20-1399/6/29"
                app:fontFamily="@font/dana_fa_regular"
                android:layout_marginEnd="16dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/btn_detail"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_left_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/line"
                android:layout_marginEnd="16dp"
                android:visibility="invisible"
                tools:ignore="VectorDrawableCompat" />
            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorTxtGray"
                app:layout_constraintTop_toBottomOf="@id/title_insurance"
                android:layout_margin="16dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/insured_person_txt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line"
                android:background="@drawable/gray_solid_background_skeleton"
                android:textColor="@color/colorTxtGray"
                app:fontFamily="@font/dana_fa_regular"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="12sp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_solid_background_skeleton"
                app:layout_constraintTop_toBottomOf="@id/insured_person_txt"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorTxtGray"
                app:fontFamily="@font/dana_fa_regular"
                android:textSize="12sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/line"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/gray_solid_background_skeleton"
                android:text="در انتظار صدور"
                android:fontFamily="@font/dana_fa_regular"
                android:textSize="11sp"
                android:textColor="@color/colorTxtGray"
                android:layout_margin="24dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:background="@drawable/text_bg"
            android:layout_margin="8dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title_insurance2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_solid_background_skeleton"
                android:textColor="@color/colorwhite"
                app:layout_constraintStart_toStartOf="parent"
                app:fontFamily="@font/dana_fa_regular"
                android:textSize="14sp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date_insurance2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/colorTxtGray"
                android:background="@drawable/gray_solid_background_skeleton"
                app:layout_constraintBottom_toTopOf="@id/line2"
                android:text="18:20-1399/6/29"
                app:fontFamily="@font/dana_fa_regular"
                android:layout_marginEnd="16dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/btn_detail2"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_detail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_left_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/line2"
                android:layout_marginEnd="16dp"
                android:visibility="invisible"
                tools:ignore="VectorDrawableCompat" />
            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorTxtGray"
                app:layout_constraintTop_toBottomOf="@id/title_insurance2"
                android:layout_margin="16dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/insured_person_txt2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line2"
                android:background="@drawable/gray_solid_background_skeleton"
                android:textColor="@color/colorTxtGray"
                app:fontFamily="@font/dana_fa_regular"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textSize="12sp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_solid_background_skeleton"
                app:layout_constraintTop_toBottomOf="@id/insured_person_txt2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorTxtGray"
                app:fontFamily="@font/dana_fa_regular"
                android:textSize="12sp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/line2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/gray_solid_background_skeleton"
                android:text="در انتظار صدور"
                android:fontFamily="@font/dana_fa_regular"
                android:textSize="11sp"
                android:textColor="@color/colorTxtGray"
                android:layout_margin="24dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>