<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_third_insurance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <View
        android:id="@+id/view_inquiry_Activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/sliding_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vehicle_img" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_first_inquiry"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dana_fa_regular"
        android:textColor="@color/colorwhite"
        android:background="@drawable/gray_solid_background_skeleton"
        app:layout_constraintStart_toStartOf="@id/view_inquiry_Activity"
        app:layout_constraintTop_toTopOf="@id/view_inquiry_Activity" />


    <LinearLayout
        android:id="@+id/linear_car"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/home_background"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/truck_linear"
        app:layout_constraintStart_toStartOf="@id/view_inquiry_Activity"
        app:layout_constraintTop_toBottomOf="@id/title_first_inquiry"
        app:layout_constraintWidth_percent="0.28">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/car_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/gray_solid_background_skeleton"
            tools:ignore="VectorDrawableCompat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/car_txt"
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:fontFamily="@font/dana_fa_regular"
            android:background="@drawable/gray_solid_background_skeleton"
            android:textColor="@color/colorwhite"
            android:layout_marginTop="8dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/truck_linear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/home_background"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/autocar_linear"
        app:layout_constraintStart_toEndOf="@id/linear_car"
        app:layout_constraintTop_toTopOf="@id/linear_car"
        app:layout_constraintWidth_percent="0.28"

        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/truck_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/gray_solid_background_skeleton"
            tools:ignore="VectorDrawableCompat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/truck_text"
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:fontFamily="@font/dana_fa_regular"
            android:textColor="@color/colorwhite"
            android:layout_marginTop="8dp"
            android:background="@drawable/gray_solid_background_skeleton"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/autocar_linear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/home_background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintDimensionRatio="1:1"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/view_inquiry_Activity"
        app:layout_constraintStart_toEndOf="@id/truck_linear"
        app:layout_constraintTop_toTopOf="@id/linear_car"
        app:layout_constraintWidth_percent="0.28">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/autocar_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/gray_solid_background_skeleton"
            tools:ignore="VectorDrawableCompat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/autocar_txt"
            android:layout_width="40dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/dana_fa_regular"
            android:textColor="@color/colorwhite"
            android:background="@drawable/gray_solid_background_skeleton"
            android:textSize="15sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/next_step_full_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@drawable/gray_solid_background_skeleton"
        android:fontFamily="@font/dana_fa_regular"
        android:gravity="center"

        android:textColor="@color/colorPrimary"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/view_inquiry_Activity"
        tools:layout_editor_absoluteX="16dp" />

    <View
        android:id="@+id/vehicle_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/gray_solid_background_skeleton" />

</androidx.constraintlayout.widget.ConstraintLayout>