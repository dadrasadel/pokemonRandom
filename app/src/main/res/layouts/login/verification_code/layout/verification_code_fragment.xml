<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    >
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:textColor="@color/colorTxtGray"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        android:id="@+id/text_phone_number"
        app:layout_constraintBottom_toTopOf="@id/description_login"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="@string/change_phone_number"
        android:textColor="@color/colorwhite"
        android:textSize="13sp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/dana_fa_regular"
        app:layout_constraintBottom_toTopOf="@id/verification_code_edit_txt"
        app:layout_constraintStart_toStartOf="parent" />


    <com.chaos.view.PinView
        android:id="@+id/verification_code_edit_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorwhite"
        style="@style/PinWidget.PinView"
        android:inputType="text"
        android:itemBackground="@drawable/text_bg"
        android:textSize="18sp"
        app:cursorWidth="2dp"
        app:hideLineWhenFilled="true"
        app:itemCount="5"
        app:itemHeight="64dp"
        app:itemRadius="4dp"
        app:itemSpacing="12dp"
        app:itemWidth="64dp"
        app:lineWidth="0dp"
        app:lineColor="@color/colorPrimary"
        app:viewType="rectangle"
         />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTxtGray"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent" />
    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/white_solid_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:text="@string/login"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/dana_fa_regular"
        android:textColor="@color/colorButtonTxtColor"
        app:layout_constraintHeight_percent="0.08"/>

</androidx.constraintlayout.widget.ConstraintLayout>