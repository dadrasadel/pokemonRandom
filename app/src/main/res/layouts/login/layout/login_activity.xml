<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/main_login_layout"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="28dp"
        android:text="@string/enter_description_login"
        android:textColor="@color/colorwhite"
        android:textSize="12sp"
        android:fontFamily="@font/dana_fa_regular"
        app:layout_constraintBottom_toTopOf="@id/phone_number_edit_txt"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="20dp"
        android:text="@string/enter_title_login"
        android:textColor="@color/colorwhite"
        android:textSize="17sp"
        android:fontFamily="@font/dana_fa_regular"
        app:layout_constraintBottom_toTopOf="@id/description_login"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/phone_number_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintCircleRadius="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="@string/cellphone_login"
        android:fontFamily="@font/dana_fa_regular"
        android:background="@drawable/text_bg"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="@color/colorwhite"
        app:layout_constraintHeight_percent="0.09"
        android:textColorHint="@color/colorTxtHint"
        android:paddingStart="24dp"

        />
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/get_code_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/white_solid_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:text="@string/get_code"
        android:fontFamily="@font/dana_fa_regular"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorButtonTxtColor"
        app:layout_constraintHeight_percent="0.08"/>

</androidx.constraintlayout.widget.ConstraintLayout>