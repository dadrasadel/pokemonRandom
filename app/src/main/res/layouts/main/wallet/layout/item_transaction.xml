<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/text_bg"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_decrease_transaction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/decrease_transaction_bg"
        app:srcCompat="@drawable/ic_up_arrow"
        android:padding="12dp"
        android:layout_margin="16dp"
        android:visibility="visible"
        app:layout_constraintDimensionRatio="1:1"
        tools:ignore="VectorDrawableCompat" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_increase_transaction"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/increase_transaction_bg"
        app:srcCompat="@drawable/ic_down_arrow"
        android:padding="12dp"
        android:visibility="gone"
        android:layout_margin="16dp"
        app:layout_constraintDimensionRatio="1:1"
        tools:ignore="VectorDrawableCompat" />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorwhite"
        android:textSize="14sp"
        android:fontFamily="@font/dana_fa_regular"
        android:text="پرداخت حق بیمه"
        app:layout_constraintStart_toEndOf="@id/img_decrease_transaction"
        app:layout_constraintTop_toTopOf="@id/img_increase_transaction"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTxtGray"
        android:textSize="12sp"
        android:fontFamily="@font/dana_fa_regular"
        android:text="پرداخت حق بیمه"
        app:layout_constraintStart_toEndOf="@id/img_decrease_transaction"
        app:layout_constraintBottom_toBottomOf="@id/img_increase_transaction"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="820000 هزار تومان"
        android:textColor="@color/colorwhite"
        android:fontFamily="@font/dana_fa_regular"
        android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>