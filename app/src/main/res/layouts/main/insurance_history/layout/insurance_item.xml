<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/text_bg"
    android:layout_margin="8dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_insurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بیمه شخص ثالث 389022"
        android:textColor="@color/colorwhite"
        app:layout_constraintStart_toStartOf="parent"
        app:fontFamily="@font/dana_fa_regular"
        android:textSize="14sp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date_insurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorTxtGray"
        app:layout_constraintBottom_toTopOf="@id/line"
        android:text="18:20-1399/6/29"
        app:fontFamily="@font/dana_fa_regular"
        android:layout_marginEnd="16dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/btn_detail"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_left_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line"
        android:layout_marginEnd="16dp"
        tools:ignore="VectorDrawableCompat" />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorTxtGray"
        app:layout_constraintTop_toBottomOf="@id/title_insurance"
        android:layout_margin="16dp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/insured_person_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:text="بیمه گذار : امین فاضل"
        android:textColor="@color/colorTxtGray"
        app:fontFamily="@font/dana_fa_regular"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="12sp"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خودرو:سواری پژو پارس 1390"
        app:layout_constraintTop_toBottomOf="@id/insured_person_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorTxtGray"
        app:fontFamily="@font/dana_fa_regular"
        android:textSize="12sp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_state"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/awaiting_issuance_bg"
        android:text="در انتظار صدور"
        android:fontFamily="@font/dana_fa_regular"
        android:textSize="11sp"
        android:textColor="@color/colorYellowAwaitTxt"
        android:layout_margin="24dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>